{
  "name": "Demo suite 003",
  "description": "A simple demo test with Mocked data",
  "config": {
    "baseUrl": "http://127.0.0.1:5000"
  },
  "steps": [
    {
      "type": "HTTP",
      "name": "Get Users",
      "description": "Get all Users",
      "request": {
        "url": "{{baseUrl}}/users",
        "method": "GET",
        "data": null
      }
    },
    {
      "type": "HTTP",
