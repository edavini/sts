    {
      "type": "ASSERT",
      "name": "Final Check",
      "description": "Check a bunch of stuff",
      "checks": [
        "len({{0.json}}) == 8",
        "{{0.status}} == 200",
        "'{{1.json.username}}' == 'marco'",
        "{{1.status}} == 200"
      ]
    }
  ]
